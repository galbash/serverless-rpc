{
  "name": "serverless-thrift-rpc",
  "version": "0.0.0-development",
  "description": "Serverless framework plugin to create RPC servers on serverless function",
  "main": "dist/bundle.js",
  "scripts": {
    "lint:js": "eslint --max-warnings=0 ./src/ -f table --ext .js --ext .jsx",
    "lint": "npm run lint:js",
    "build:dev": "rollup -c",
    "build": "NODE_ENV=production rollup -c",
    "clean": "rm -r dist/",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galbash/serverless-rpc.git"
  },
  "keywords": [
    "serverless",
    "lambda",
    "rpc",
    "thrift"
  ],
  "files": [
    "dist"
  ],
  "author": "Gal Bashan & Tal Vintrob",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/galbash/serverless-rpc/issues"
  },
  "homepage": "https://github.com/galbash/serverless-rpc#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-angular": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "eslint": "^4.18.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-uglify-es": "0.0.1",
    "semantic-release": "^15.13.16",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "glob-promise": "^3.4.0",
    "lodash": "^4.17.11",
    "util.promisify": "^1.0.0"
  }
}
